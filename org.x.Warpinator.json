{
   "app-id": "org.x.Warpinator",
   "runtime": "org.gnome.Platform",
   "runtime-version": "47",
   "sdk": "org.gnome.Sdk",
   "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
   "command": "warpinator",
   "finish-args": [
      "--share=ipc",
      "--socket=fallback-x11",
      "--socket=wayland",
      "--device=dri",
      "--share=network",
      "--filesystem=home",
      "--filesystem=/media:ro",
      "--own-name=org.x.StatusIcon.warpinator",
      "--talk-name=org.x.StatusIconMonitor.*",
      "--talk-name=org.freedesktop.FileManager1"
   ],
   "modules": [
      {
         "name": "warpinator",
         "buildsystem": "meson",
         "config-opts": [
            "-Dinclude-firewall-mod=false",
            "-Dflatpak-build=true",
            "-Dbundle-grpc=false"
         ],
         "sources": [
            {
               "type": "git",
               "tag": "1.8.8",
               "url": "https://github.com/linuxmint/warpinator.git",
               "commit": "888640147fa9e1438ee9e0842006cd9f2ddd606a",
               "x-checker-data": {
                  "type": "git",
                  "tag-pattern": "^([\\d.]+)$"
               }
            }
         ],
         "modules": [
            "python3-modules.json",
            {
               "name": "python-xapp",
               "buildsystem": "meson",
               "sources": [
                  {
                     "type": "git",
                     "url": "https://github.com/linuxmint/python-xapp.git",
                     "tag": "2.4.2",
                     "commit": "e97e119d483b849bd833d7900f76c4ee20af2838",
                     "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^([\\d.]+)$"
                     }
                  }
               ]
            },
            {
               "name": "xapps",
               "buildsystem": "meson",
               "config-opts": [
                  "-Dapp-lib-only=true",
                  "-Dpy-overrides-dir=/app/lib/python3.12/site-packages/gi/overrides"
               ],
               "sources": [
                  {
                     "type": "git",
                     "url": "https://github.com/linuxmint/xapp.git",
                     "tag": "2.8.8",
                     "commit": "17c45eb8e68aaeea386d5e299e16379d26ba141a",
                     "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^([\\d.]+)$"
                     }
                  }
               ]
            }
         ]
      }
   ],
   "cleanup": [
      "/bin/wheel",
      "/include",
      "/lib/debug/source",
      "/lib/pkgconfig",
      "/share/gir-1.0",
      "/share/vala",
      "/share/icons/hicolor/icon-theme.cache"
   ]
}
